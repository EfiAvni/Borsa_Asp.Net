@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kur Çevirici</title>
    <link href="/css/currencyConverter.css" rel="stylesheet">
</head>

<body>

    <div class="container">
        <div class="converter-box">
            <h1>Kur Çevirici</h1>
            <div class="currency-container">
                <div class="currency-field">
                    <label for="amount">Tutar</label>
                    <input type="number" id="amount" placeholder="Tutar girin" />
                </div>
                <div class="currency-field">
                    <label for="fromCurrency">Başlangıç Para Birimi</label>
                    <select id="fromCurrency">
                        <option value="USD">USD</option>
                        <option value="EUR">EUR</option>
                        <option value="TRY">TRY</option>
                        <option value="GBP">GBP</option>
                    </select>
                </div>
                <div class="currency-field">
                    <label for="toCurrency">Hedef Para Birimi</label>
                    <select id="toCurrency">
                        <option value="TRY">TRY</option>
                        <option value="USD">USD</option>
                        <option value="EUR">EUR</option>
                        <option value="GBP">GBP</option>
                    </select>
                </div>
                <button id="convertButton">Çevir</button>
            </div>
            <div id="result" class="result">
                <p><strong>Sonuç:</strong> <span id="convertedValue"></span></p>
            </div>
        </div>
    </div>

    <script src="/js/currencyConverter.js"></script>
</body>

</html>
